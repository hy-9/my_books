<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myFragment"
    android:background="@color/grey">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_register"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击登录"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/my_dingdan"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/yuan_jiao">

        <TextView
            android:id="@+id/mywz0"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="个人信息"
            android:textSize="30dp"
            android:textStyle="bold" />



        <ImageView
            android:id="@+id/my_ddfgx"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/mywz0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/black" />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/my_ddfgx"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/my_logo"
            android:id="@+id/my_logo_tp"
            />
        <ImageView
            android:id="@+id/my_xq_fgx"
            android:layout_width="2dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/my_logo_tp"
            android:layout_below="@id/my_ddfgx"
            android:background="@color/grey_1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/my_xq_yhm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_ddfgx"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/my_xq_fgx"
            android:text="用户名"
            android:textColor="@color/black"
            android:textSize="22dp" />
        <TextView
            android:id="@+id/my_xq_books"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总藏书：本"
            android:layout_below="@id/my_xq_yhm"
            android:layout_toRightOf="@id/my_xq_fgx"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/my_xq_site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_xq_yhm"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/my_xq_books"
            android:text="书架数：个"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/my_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_ddfgx"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:text="用户id:"
            android:textColor="#AFAFAF"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_site"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/my_dingdan"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/yuan_jiao"
        >

        <TextView
            android:id="@+id/my_site_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="地址"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/my_site_qb"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="详情> "
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/my_site_ddfgx"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@id/my_site_text"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/black" />

        <ListView
            android:id="@+id/my_site_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_site_ddfgx"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/grey" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_else"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_site"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/yuan_jiao">

        <RelativeLayout
            android:id="@+id/my_like"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/my_like_tp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/likes" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="90dp"
                android:gravity="center_vertical"
                android:text="收藏"
                android:textSize="25dp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/my_like_fgx"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@id/my_like"/>
        <RelativeLayout
            android:id="@+id/my_set"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/my_like_fgx" >

            <ImageView
                android:id="@+id/my_set_tp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="18dp"
                android:src="@drawable/set" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="90dp"
                android:gravity="center_vertical"
                android:text="设置"
                android:textSize="25dp" />
        </RelativeLayout>
        <ImageView
            android:id="@+id/my_set_fgx"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_below="@id/my_set"/>
        <RelativeLayout
            android:id="@+id/my_logout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/my_set_fgx" >

            <ImageView
                android:id="@+id/my_logout_tp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/logout" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="90dp"
                android:gravity="center_vertical"
                android:text="退出登录"
                android:textSize="25dp" />
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>